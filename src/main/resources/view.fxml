<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.SudokuController">
    <center>
        <TabPane prefHeight="1200.0" prefWidth="1200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="9x9">
                    <content>
                        <VBox alignment="CENTER">
                            <GridPane fx:id="gridNormal" alignment="CENTER" prefHeight="800.0"/>
                            <Label fx:id="outputNormal" alignment="CENTER"/>
                            <ButtonBar prefHeight="100.0" prefWidth="1000.0">
                                <buttons>
                                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="2000" spacing="10">
                                        <Button fx:id="setButtonNormal" onAction="#setGridNormal"
                                                text="Sudoku bestätigen"/>
                                        <Button onAction="#generateSudokuLayout9x9" text="Zurück setzen"/>
                                    </HBox>
                                    <HBox alignment="CENTER_RIGHT" prefWidth="200" spacing="10.0">
                                        <Button fx:id="nextNumberNormal" onAction="#nextNumberNormal"
                                                text="Nächste Zahl"/>
                                        <padding>
                                            <Insets right="20.0"/>
                                        </padding>
                                    </HBox>
                                </buttons>
                            </ButtonBar>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="16x16">
                    <content>
                        <VBox alignment="CENTER" prefHeight="800.0">
                            <GridPane fx:id="gridHex" alignment="CENTER" prefHeight="900.0"/>
                            <Label fx:id="outputHex" alignment="CENTER"/>
                            <ButtonBar BorderPane.alignment="CENTER">
                                <buttons>
                                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="2000" spacing="10">
                                        <Button fx:id="setButtonHex" onAction="#setGridHex" text="Sudoku bestätigen"/>
                                        <Button onAction="#generateSudokuLayout16x16" text="Zurück setzen"/>
                                    </HBox>
                                    <HBox alignment="CENTER_RIGHT" prefWidth="200" spacing="10">
                                        <Button fx:id="nextNumberHex" onAction="#nextNumberHex" text="Nächste Zahl"/>
                                        <padding>
                                            <Insets right="20.0"/>
                                        </padding>
                                    </HBox>
                                </buttons>
                            </ButtonBar>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <top>
        <Pane prefHeight="20.0"/>
    </top>
    <left>
        <Pane prefWidth="20.0"/>
    </left>
    <right>
        <Pane prefWidth="20.0"/>
    </right>
    <bottom>
        <Pane prefHeight="20.0"/>
    </bottom>
</BorderPane>
